<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="#FAFAFA"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_layout1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp" >

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="13dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="22dp"
            android:background="@color/background"/>

        <TextView
            android:id="@+id/staticTextSelamat"
            android:text="@string/selamat_anda_mendapatkan_text"
            android:textSize="12sp"
            android:textColor="#828282"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/userImage"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="21dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/jumlahPoin"
            android:text="300 Poin"
            android:textSize="12sp"
            android:textColor="@color/text_color1"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/userImage"
            app:layout_constraintTop_toBottomOf="@id/staticTextSelamat"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5.5dp"/>

        <TextView
            android:id="@+id/staticTextSurvey"
            android:text="@string/atas_survey_text"
            android:textSize="12sp"
            android:textColor="#828282"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/userImage"
            app:layout_constraintTop_toBottomOf="@id/jumlahPoin"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5.5dp"/>

        <TextView
            android:id="@+id/namaToko"
            android:text="Toko APA"
            android:textSize="12sp"
            android:textColor="@color/sinarmas_red"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/staticTextSurvey"
            app:layout_constraintTop_toBottomOf="@id/jumlahPoin"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5.5dp"/>

        <ImageView
            android:id="@+id/border1"
            android:src="@drawable/border_line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            app:layout_constraintTop_toBottomOf="@id/namaToko"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="11dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Mei"
            android:textColor="@color/text_color7"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@id/border1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="73dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="SmallSp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lihat_detail_text"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@id/border1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:drawablePadding="7dp"
            android:drawableEnd="@drawable/next_arrow"
            android:background="@drawable/button_effect"
            tools:ignore="SmallSp" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>