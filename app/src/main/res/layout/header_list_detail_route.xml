<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/staticIconPosition"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        android:contentDescription="@string/sinarmas_logo"
        app:srcCompat="@drawable/your_position_icon" />

    <RelativeLayout
        android:id="@+id/staticIconTrack"
        android:layout_width="5dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="28.5dp"
        android:layout_marginTop="30dp"
        android:background="@color/sinarmas_red"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/staticIconSurvey"
        android:layout_marginStart="64dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="@string/your_location_text"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/textAlamatPosisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="#BDBDBD"
            android:text="JL. Trunojoyo No. 139, Bandung"
            tools:ignore="SmallSp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>