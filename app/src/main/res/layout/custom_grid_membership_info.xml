<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="211dp"
    android:background="#FAFAFA"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_layout1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp" >

        <ImageView
            android:id="@+id/voucherImage"
            android:layout_width="88dp"
            android:layout_height="88dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="41dp"
            android:background="@color/background"/>

        <TextView
            android:id="@+id/textCategory"
            android:text="Edukasi"
            android:textSize="10sp"
            android:textColor="#828282"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/voucherImage"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/namaVoucher"
            android:text="Beasiswa Kursus"
            android:textSize="12sp"
            android:textColor="@color/text_color1"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textCategory"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"/>

        <TextView
            android:id="@+id/textPoin"
            android:text="300 Ponts"
            android:textSize="10sp"
            android:textColor="#828282"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/namaVoucher"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"/>

        <RelativeLayout
            android:id="@+id/border1"
            android:background="@drawable/custom_border1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/textPoin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tukarkanPoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tukarkan_text"
            android:textSize="12sp"
            android:textColor="@color/sinarmas_red"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/border1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_effect"
            tools:ignore="SmallSp" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>