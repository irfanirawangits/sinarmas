<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetHome"
    android:layout_width="match_parent"
    android:layout_height="542dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="185dp"
    android:elevation="15dp"
    android:background="@drawable/rounded_layout1"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    tools:targetApi="lollipop">

    <ImageView
        android:id="@+id/buttonBottomSheet"
        android:src="@drawable/bar_icon"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_effect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="9dp"/>

    <TextView
        android:text="@string/leaderboard_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/text_color1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="22dp"
        android:layout_marginTop="27dp" />

    <Button
        android:layout_width="98dp"
        android:layout_height="20dp"
        android:background="@drawable/rounded_button1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="43dp"
        android:textSize="9sp"
        android:textAllCaps="false"
        android:text="@string/lihat_leaderboard_text"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:drawableEnd="@drawable/next_arrow"
        android:drawableTint="@android:color/white"
        android:paddingEnd="10dp"
        android:layout_marginStart="22dp"
        tools:ignore="SmallSp"
        tools:targetApi="m" />
    
    <TextView
        android:id="@+id/staticInsentifText"
        android:text="@string/insentif_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/text_color1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="27dp" />

    <TextView
        android:id="@+id/pointInsentif"
        android:text="15 Poin"
        android:textSize="20sp"
        android:textColor="@color/text_color6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/staticInsentifText"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="19dp"/>

    <TextView
        android:id="@+id/jumlahTugasSurvey"
        android:text="15 Tugas Survey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="93dp"
        android:textSize="13sp"
        android:textColor="@color/text_color1" />

    <TextView
        android:id="@+id/totalTersurvey"
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_effect"
        app:layout_constraintTop_toBottomOf="@id/jumlahTugasSurvey"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/text_color4"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="66dp"/>

    <TextView
        android:text="@string/tersurvey_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color1"
        app:layout_constraintTop_toBottomOf="@id/totalTersurvey"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="45dp"
        android:textSize="11sp"
        android:drawableEnd="@drawable/next_arrow"
        android:drawablePadding="5dp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/totalDiproses"
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_effect"
        app:layout_constraintTop_toBottomOf="@id/jumlahTugasSurvey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/text_color5"
        android:textSize="24sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/staticDiprosesText"
        android:text="@string/diproses_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color1"
        app:layout_constraintTop_toBottomOf="@id/totalTersurvey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="11sp"
        android:drawableEnd="@drawable/next_arrow"
        android:drawablePadding="5dp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/totalTersedia"
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_effect"
        app:layout_constraintTop_toBottomOf="@id/jumlahTugasSurvey"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="54dp"
        android:textColor="@color/sinarmas_red"
        android:textSize="24sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:text="@string/tersedia_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color1"
        app:layout_constraintTop_toBottomOf="@id/totalTersurvey"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="37dp"
        android:textSize="11sp"
        android:drawableEnd="@drawable/next_arrow"
        android:drawablePadding="5dp"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/tersediaUntukSurvey"
        android:layout_width="254dp"
        android:layout_height="37dp"
        android:background="@drawable/rounded_button1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/staticDiprosesText"
        android:layout_marginTop="25dp"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:text="Tersedia untuk di survey (3)"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:layout_marginStart="22dp"
        tools:ignore="SmallSp"
        tools:targetApi="m" />

    <ListView
        android:id="@+id/listSurvey"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="230dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tersediaUntukSurvey" />

</android.support.constraint.ConstraintLayout>