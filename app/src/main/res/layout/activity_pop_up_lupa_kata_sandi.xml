<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_popup"
    tools:context=".popup.PopUpLupaKataSandi">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="138dp"
    android:layout_marginStart="21dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/rounded_layout"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <TextView
        android:id="@+id/staticLupakata1"
        android:text="@string/lupa_kata_sandi_text"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:scaleY="0.2"
        android:scaleX="0.2"
        android:src="@drawable/cross_icon"
        android:background="@drawable/button_effect"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="3dp"
        android:contentDescription="@string/close_icon" />

    <TextView
        android:text="@string/link_perbarui_kata_sandi_sudah_dikirim_nmelalui_email_anda_silahkan_cek_email_nanda_text"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/text_color2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/staticLupakata1"/>

    <TextView
        android:textColor="@color/sinarmas_red"
        android:textStyle="bold"
        android:id="@+id/ok"
        android:textSize="14sp"
        android:text="@string/ok_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/button_effect"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>